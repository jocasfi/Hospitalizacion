<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital En Casa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/karlos.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/HospiEnCasa.App.Frontend.styles.css" asp-append-version="true" /> *@
</head>
<body class=".mh-100">
    <header>
        <div class="grid row col-10 offset-md-1">

            <div id="logo-pagina">
                <div id="logo">
                    <img src="~/imagenes/logo.png" class="img-fluid"  alt="logo">
                </div>
            </div>

            <div class="titulo">
                @* <a asp-area="" asp-page="/Index"></a> *@
                <p class="h4 display-4">HOSPITAL EN CASA</p>
            </div>

            <div class="info">
                <button class="but_info">Login</button>
            </div>

        </div>
        <div class="row">
            <nav
                class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 col-md-7 offset-md-3">
                <div class="container">
                    @* <a class="navbar-brand" asp-area="" asp-page="/Index">Hospital En Casa</a> *@
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            
                            <li class="nav-item dropdown">
                                @* <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a> *@
                                <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown">
                                    Datos
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Datos/Pacientes/ListadoPacientes">Paciente</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Datos/Medicos/ListadoMedicos">Medico</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Datos/Enfermeros/ListadoEnfermeros">Enfermero</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="#">Familiar Asignado</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="#">Auxiliar Hospital</a></li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Procesos</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2022 - Grupo Riobamba - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>